<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".elegirPaloFragment"
    android:background="@color/pokerOriginal">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="180dp"
        android:text="Elegir palo"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/trebol"
        android:layout_width="152dp"
        android:layout_height="173dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/club"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/diamante"
        android:layout_width="136dp"
        android:layout_height="175dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/diamond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/corazon" />

    <ImageButton
        android:id="@+id/corazon"
        android:layout_width="146dp"
        android:layout_height="174dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/pica"
        android:layout_width="138dp"
        android:layout_height="179dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/spade"
        app:layout_constraintStart_toEndOf="@+id/trebol"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>