<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="views.contrasena">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textocontrasena1"
        android:layout_width="292dp"
        android:layout_height="55dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/enchantedland"
        android:text="Establece una contraseña: "
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textocontrasena2"
        android:layout_width="178dp"
        android:layout_height="34dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="16dp"
        android:textSize="20dp"
        android:fontFamily="@font/enchantedland"
        android:text="Contraseña:"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textocontrasena3"
        android:layout_width="178dp"
        android:layout_height="34dp"
        android:textSize="20dp"
        android:layout_marginEnd="128dp"
        android:fontFamily="@font/enchantedland"
        android:text="Confirmar contraseña:"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/edittext"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edittext"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/botonconfirmarcontrasena"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botonconfirmarcontrasena"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/enchantedland"
        android:textSize="15dp"
        android:background="@drawable/botonblanco"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>