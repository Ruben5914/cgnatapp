<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeChillon"
    tools:context="views.Principal">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonSignIn"
        android:layout_width="301dp"
        android:layout_height="56dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#fff"
        android:drawableStart="@drawable/google"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonGuest"
        android:layout_width="304dp"
        android:layout_height="55dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#fff"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Continue as gest"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mensajeInformativoInicioSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="32dp"
        android:text="Sign in to register all your hands and stats"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/botonSignIn"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tituloApp"


        android:layout_width="214dp"
        android:layout_height="73dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="100dp"
        android:text="APP POKER"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="181dp"
        android:layout_height="177dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="120dp"
        android:src="@drawable/iconopokergroper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloApp" />

</androidx.constraintlayout.widget.ConstraintLayout>