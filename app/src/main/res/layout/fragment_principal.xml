<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logowifi"
    tools:context="views.Principal">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botonSignIn"
        android:layout_width="301dp"
        android:layout_height="56dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#fff"
        android:drawableStart="@drawable/google"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mensajeInformativoInicioSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="28dp"
        android:text="Sign in to register the data"
        android:textSize="18dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/botonSignIn"

        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tituloApp"


        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/typekeys"
        android:paddingTop="10dp"
        android:text="CGNatsApp"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>